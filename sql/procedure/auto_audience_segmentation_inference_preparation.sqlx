  -- Setting procedure to lookback from the day before `inference_date`

DECLARE lookback_days INT64 DEFAULT 15;
SET inference_date = DATE_SUB(inference_date, INTERVAL 1 DAY);

CALL `{{project_id}}.{{dataset}}.create_auto_audience_segmentation_dataset`(inference_date, inference_date, lookback_days);

CREATE OR REPLACE TABLE `{{project_id}}.{{dataset}}.auto_audience_segmentation_inference_15`
AS
SELECT
  *
FROM
  `{{project_id}}.{{dataset}}.auto_audience_segmentation_full_dataset`;

-- CREATE OR REPLACE VIEW `{{project_id}}.{{dataset}}.v_auto_audience_segmentation_inference_15`
CREATE OR REPLACE TABLE `{{project_id}}.{{dataset}}.v_auto_audience_segmentation_inference_15`
  OPTIONS(
    friendly_name="v_auto_audience_segmentation_inference_15",
    description="View Auto Audience Segmentation dataset using 15 days lookback.",
    labels=[("org_unit", "development")]
  )
AS
SELECT * FROM `{{project_id}}.{{dataset}}.auto_audience_segmentation_inference_15`;

DROP TABLE `{{project_id}}.{{dataset}}.auto_audience_segmentation_full_dataset`;